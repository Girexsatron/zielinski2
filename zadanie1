<script>
function info() {
 var name = document.getElementById("name").value;
 var surname = document.getElementById("surname").value;
 var subject = document.getElementById("subject").value;
 var przedmiot1 = document.getElementById("przedmiot1").value;
 var przedmiot2 = document.getElementById("przedmiot2").value;
 var przedmiot3 = document.getElementById("przedmiot3").value;
 var ocena1 = document.getElementById("ocena1").value;
 var ocena2 = document.getElementById("ocena2").value;
 var ocena3 = document.getElementById("ocena3").value;

 
 
 alert("Witaj " + name + " " + surname + " " + subject + " " + przedmiot1 + " " + ocena1 + " " + przedmiot2 + " " + ocena2 + " " + przedmiot3 + " " + ocena3)
}
	
	function srednia(){
		
 var ocena1 = parseInt(prompt("OCENA1"));
 var ocena2 = parseInt(prompt("OCENA2"));
 var ocena3 = parseInt(prompt("OCENA3")); 
		
		document.write("Srednia to= "+(ocena1+ocena2+ocena3)/3);
		

	}
	
	</script>
	
	
